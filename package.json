{
  "name": "npm-boilerplate-node",
  "version": "1.0.0",
  "description": "Description goes here",
  "main": "dist/index.js",
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/contra/npm-boilerplate-node.git"
  },
  "author": "Contra <yo@contra.io> (http://contra.io)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/contra/npm-boilerplate-node/issues"
  },
  "homepage": "https://github.com/contra/npm-boilerplate-node#readme",
  "files": [
    "dist"
  ],
  "scripts": {
    "preversion": "npm run clean && npm run build && npm docs",
    "postversion": "npm run changelog",
    "build": "babel src --out-dir dist",
    "clean": "rimraf dist",
    "lint": "eslint src",
    "changelog": "github-changes -o contra -r npm-boilerplate-node -b master -f ./CHANGELOG.md --order-semver --use-commit-body",
    "test": "npm run-script lint && mocha --compilers js:babel-register --recursive --reporter spec",
    "docs": "npm run docs:pre && npm run docs:build && npm run docs:publish",
    "docs:pre": "gitbook install && rimraf _book",
    "docs:build": "gitbook build -g contra/npm-boilerplate-node",
    "docs:publish": "cd _book && git init && git commit --allow-empty -m 'update book' && git checkout -b gh-pages && touch .nojekyll && git add . && git commit -am 'update book' && git push git@github.com:contra/npm-boilerplate-node gh-pages --force"
  },
  "devDependencies": {
    "babel": "^6.3.26",
    "babel-cli": "^6.4.0",
    "babel-core": "^6.4.0",
    "babel-eslint": "^4.1.6",
    "babel-loader": "^6.2.1",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-runtime": "^6.4.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-es2015-loose": "^7.0.0",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.4.3",
    "babelify": "^7.2.0",
    "eslint": "^1.10.3",
    "eslint-config-rackt": "^1.1.1",
    "gitbook-cli": "^1.0.1",
    "github-changes": "^1.0.1",
    "mocha": "^2.3.4",
    "rimraf": "^2.5.0",
    "should": "^8.0.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "env": {
      "node": true,
      "es6": true
    },
    "ecmaFeatures": {
      "modules": true
    }
  }
}
